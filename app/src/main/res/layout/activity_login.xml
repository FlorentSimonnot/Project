<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg1"
>

    <LinearLayout
            android:id="@+id/layoutLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints,UseCompoundDrawables"
            android:gravity="center"
            android:paddingTop="20dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="2dp"
            tools:layout_editor_absoluteX="0dp"
    >

        <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_logo"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"
        />-->

        <TextView
                android:text="BlablablaBlabla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:fontFamily="@font/rubik"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
        />


    </LinearLayout>

    <!-- =============EDIT TEXT============ -->
    <LinearLayout
            android:id="@+id/inputLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:layout_below="@id/layoutLogo"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical"
    >

        <!--pour les connexions-->
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:hint="Email"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/basic_input_rectangle"
                android:padding="7dp"
                android:drawablePadding="15dp"
                android:fontFamily="@font/rubik"
                android:drawableLeft="@drawable/ic_mail_24dp"
                android:drawableStart="@drawable/ic_mail_24dp"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/basic_input_rectangle"
                android:padding="7dp"
                android:drawablePadding="15dp"
                android:fontFamily="@font/rubik"
                android:drawableLeft="@drawable/ic_lock_24dp"
                android:drawableStart="@drawable/ic_lock_24dp"
        />

    </LinearLayout>

    <!-- =========PASSWORD FORGOT========== -->
    <LinearLayout
            android:id="@+id/buttonForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputLogin"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:gravity="start"
    >

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/forgotPassword"
                android:text="Forgot your Password ? Click Here"
                android:fontFamily="@font/rubik"
                android:background="@android:color/transparent"
                android:textColor="#fff"
                android:gravity="start"
                android:paddingTop="10dp"
        />
    </LinearLayout>

    <!-- ===========LOGIN BUTTON=========== -->
    <LinearLayout
            android:id="@+id/buttonLoginLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonForgotPassword"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
    >

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLogin"
                android:background="#fff"
                android:textColor="@color/colorTextDarkMode"
                android:text="LOGIN"
                android:textSize="18sp"
        />
    </LinearLayout>

    <!-- ===========SEPARATOR============== -->
    <LinearLayout
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/buttonLoginLayout"
        android:orientation="horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="70dp"
        android:gravity="bottom|center"
    >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        >

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="OR"
                android:textSize="18sp"
                android:padding="12dp"
                android:background="@drawable/rounded_separator"
                android:layout_gravity="center"
                android:elevation="100dp"
                android:textColor="@color/colorTextDarkMode"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fff"
                android:layout_marginTop="24dp"
            >

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <!-- ====LOGIN WITH SOCIAL NETWORKS==== -->
    <LinearLayout
            android:id="@+id/buttonsLoginSocialNetworks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:gravity="bottom|center"
            android:orientation="horizontal"
    >

        <Button
                android:id="@+id/facebookLoginButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/rounded_button_facebook_signin"
                style="?android:attr/borderlessButtonStyle"
                android:gravity="center"
                android:drawableStart="@drawable/ic_facebook_logo_white"
                android:drawableLeft="@drawable/ic_facebook_logo_white"
                android:paddingLeft="16dp"
                android:layout_marginRight="40dp"/>

        <Button
                android:id="@+id/googleLoginButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/rounded_button_google_signin"
                style="?android:attr/borderlessButtonStyle"
                android:gravity="center"
                android:drawableStart="@drawable/ic_google_logo_white"
                android:drawableLeft="@drawable/ic_google_logo_white"
                android:paddingLeft="18dp"/>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
    >


        <Button
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:id="@+id/notAMember"
                android:fontFamily="@font/rubik"
                android:text="Not a member ? Click Here to join US"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"
                style="?android:attr/borderlessButtonStyle"
        />
    </LinearLayout>

</RelativeLayout>
