<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserInfoActivity">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            tools:ignore="MissingConstraints"
            android:id="@+id/toolbar"
            android:theme="@style/Toolbar"
            app:titleTextColor="#fff"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:id="@+id/test"
                    android:text="My Account"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:fontFamily="@font/rubik"
            />

            <ImageButton
                    android:id="@+id/btn_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Logout"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:padding="10dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/rubik"
                    app:srcCompat="@drawable/ic_logout_white_24dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
            />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
        >
            <!--PROFILE PHOTO-->
            <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_photo"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/com_facebook_profile_picture_blank_portrait"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="60dp"/>


            <!--NAME + FIRSTNAME-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_and_firstName_layout"
                    android:layout_below="@id/profile_photo"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.5"
                >
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="name"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            style="?android:attr/listSeparatorTextViewStyle"
                    />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_account"
                            android:textSize="15dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginBottom="20dp"
                    />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical"
                >
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="first name"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            style="?android:attr/listSeparatorTextViewStyle"
                    />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/firstName_account"
                            android:textSize="15dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginBottom="20dp"
                    />
                </LinearLayout>

            </LinearLayout>
            <!--=============================================================-->

            <!--EMAIL-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email_layout"
                    android:orientation="vertical"
                    android:layout_below="@id/name_and_firstName_layout"
            >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="email"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        style="?android:attr/listSeparatorTextViewStyle"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/email_account"
                        android:layout_below="@id/name_and_firstName_layout"
                        android:textSize="15dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginBottom="20dp"
                />
            </LinearLayout>
            <!--=============================================================-->


            <!--SEX + BIRTHDAY + CITY-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sex_and_birthday_and_city_layout"
                    android:layout_below="@id/email_layout"
                    android:orientation="horizontal"
            >
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.3"
                >
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="sex"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            style="?android:attr/listSeparatorTextViewStyle"
                    />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/sex_account"
                            android:textSize="15dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginBottom="20dp"
                    />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.3"
                >
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="birthday"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            style="?android:attr/listSeparatorTextViewStyle"
                    />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/birthday_account"
                            android:textSize="15dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginBottom="20dp"
                    />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.3"
                >
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="city"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            style="?android:attr/listSeparatorTextViewStyle"
                    />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/city_account"
                            android:textSize="15dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginBottom="20dp"
                    />
                </LinearLayout>
            </LinearLayout>
            <!--=========================================================-->

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/describe_layout"
                    android:layout_below="@id/sex_and_birthday_and_city_layout"
                    android:orientation="vertical"
            >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="description"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        style="?android:attr/listSeparatorTextViewStyle"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:id="@+id/describe_account"
                        android:textSize="15dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginBottom="20dp"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/describe_layout"
                    android:gravity="bottom"
                    android:orientation="vertical">
                <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edit_profile_button"
                        android:text="edit my account"
                />
                <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_delete_account"
                        android:text="delete my account"
                        android:textColor="#fff"
                />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- ***********BOTTOM MENU************* -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="@color/colorPrimary"
            app:itemTextColor="#fff"
            app:itemIconTint="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu"
            app:labelVisibilityMode="labeled"
    />

</androidx.constraintlayout.widget.ConstraintLayout>