<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserInfoActivity">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            tools:ignore="MissingConstraints"
            android:id="@+id/toolbar"
            app:navigationIcon="?attr/homeAsUpIndicator"
            android:theme="@style/Toolbar"
            app:titleTextColor="#fff"
    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/toolbar_textview"
                android:textColor="#fff"
                android:textSize="24dp"
                android:fontFamily="@font/rubik"
                android:gravity="end|center_vertical"
                android:textAlignment="textEnd"
                android:layout_marginRight="10dp"
        />
    </androidx.appcompat.widget.Toolbar>

    <!--PROFILE PHOTO-->
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/profile_photo"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait"
            android:layout_below="@id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
    />

    <!--NAME + FIRSTNAME-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_and_firstName_layout"
            android:layout_below="@id/profile_photo"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5"
        >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    style="?android:attr/listSeparatorTextViewStyle"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_account"
                    android:textSize="15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="20dp"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
        >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="first name"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    style="?android:attr/listSeparatorTextViewStyle"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/firstName_account"
                    android:textSize="15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="20dp"
            />
        </LinearLayout>

    </LinearLayout>
    <!--=============================================================-->

    <!--EMAIL-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_layout"
            android:orientation="vertical"
            android:layout_below="@id/name_and_firstName_layout"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                style="?android:attr/listSeparatorTextViewStyle"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email_account"
                android:layout_below="@id/name_and_firstName_layout"
                android:textSize="15dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="20dp"
        />
    </LinearLayout>
    <!--=============================================================-->


    <!--SEX + BIRTHDAY + CITY-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sex_and_birthday_and_city_layout"
            android:layout_below="@id/email_layout"
            android:orientation="horizontal"
    >
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.3"
        >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sex"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    style="?android:attr/listSeparatorTextViewStyle"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sex_account"
                    android:textSize="15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="20dp"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.3"
        >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="birthday"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    style="?android:attr/listSeparatorTextViewStyle"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/birthday_account"
                    android:textSize="15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="20dp"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.3"
        >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="city"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    style="?android:attr/listSeparatorTextViewStyle"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/city_account"
                    android:textSize="15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="20dp"
            />
        </LinearLayout>
    </LinearLayout>
    <!--=========================================================-->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/describe_layout"
            android:layout_below="@id/sex_and_birthday_and_city_layout"
            android:orientation="vertical"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="description"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                style="?android:attr/listSeparatorTextViewStyle"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/describe_account"
                android:textSize="15dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="20dp"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/describe_layout"
            android:gravity="bottom"
    >
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_profile_button"
                android:text="edit profile"
        />
    </LinearLayout>

</RelativeLayout>