<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrey100"
        tools:context=".UserInfoActivity">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            tools:ignore="MissingConstraints"
            android:id="@+id/toolbar"
            android:theme="@style/Toolbar"
            app:titleTextColor="#fff"
    >
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:background="@color/backgroundColor"
            >

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints"
                >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                <!--PROFILE PHOTO-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="30dp"
                        >
                    <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_photo"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/com_facebook_profile_picture_blank_portrait"
                            app:civ_border_width="2dp"
                            app:civ_border_color="#FF000000"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            />
                </LinearLayout>

                <!--=============================================================-->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:id="@+id/email_layout"
                        android:layout_below="@id/name_and_firstName_layout"
                        android:background="@color/colorBackgroundTitleEvent"
                        >
                    <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:srcCompat="@drawable/ic_email"
                            />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/email_account"
                            android:text=""
                            android:fontFamily="@font/rubik"
                            android:paddingBottom="10dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/colorText"
                            />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:orientation="horizontal"
                        android:background="@color/colorSeparatorInfo"
                        android:layout_marginLeft="54dp"
                        android:layout_marginStart="54dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="40dp"
                        >
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:id="@+id/sex_layout"
                        android:layout_below="@id/name_and_firstName_layout"
                        android:background="@color/colorBackgroundTitleEvent"
                        >
                    <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:srcCompat="@drawable/ic_gender"
                            />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/sex_account"
                            android:text=""
                            android:fontFamily="@font/rubik"
                            android:paddingBottom="10dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/colorText"
                            />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:orientation="horizontal"
                        android:background="@color/colorSeparatorInfo"
                        android:layout_marginLeft="54dp"
                        android:layout_marginStart="54dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="40dp"
                        >
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:id="@+id/birthday_layout"
                        android:layout_below="@id/name_and_firstName_layout"
                        android:background="@color/colorBackgroundTitleEvent"
                        >
                    <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:srcCompat="@drawable/ic_birthday_primary"
                            />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/birthday_account"
                            android:text=""
                            android:fontFamily="@font/rubik"
                            android:paddingBottom="10dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/colorText"
                            />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:orientation="horizontal"
                        android:background="@color/colorSeparatorInfo"
                        android:layout_marginLeft="54dp"
                        android:layout_marginStart="54dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="40dp"
                        >
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:id="@+id/city_layout"
                        android:layout_below="@id/name_and_firstName_layout"
                        android:background="@color/colorBackgroundTitleEvent"
                        >
                    <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:srcCompat="@drawable/ic_city"
                            />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/city_account"
                            android:text=""
                            android:textColor="@color/colorText"
                            android:fontFamily="@font/rubik"
                            android:paddingBottom="10dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            />
                </LinearLayout>

                <!--=========================================================-->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/describe_layout"
                        android:orientation="vertical"
                        android:background="@color/colorBackgroundTitleEvent"
                        android:layout_marginTop="30dp"
                        >
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/user_info_description"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:padding="10dp"
                            android:fontFamily="@font/rubik"
                            android:textColor="@color/colorText"
                            />
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:orientation="horizontal"
                            android:background="@color/colorSeparatorInfo"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginEnd="10dp"
                            >
                    </LinearLayout>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:id="@+id/describe_account"
                            android:textSize="15dp"
                            android:padding="10dp"
                            android:textColor="@color/colorText"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radius_layout"
                        android:orientation="horizontal"
                        android:background="@color/colorBackgroundTitleEvent"
                        android:layout_marginTop="30dp"
                        android:padding="15dp"
                        >
                    <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:srcCompat="@drawable/ic_distance"
                            />
                    <SeekBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/radius"
                            android:text=""
                            android:fontFamily="@font/rubik"
                            android:paddingBottom="10dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:thumbTint="@color/colorSeparatorInfo"
                            android:progressTint="@color/colorSeparatorInfo"
                            android:max="25"
                            android:backgroundTint="@color/colorBlueGrey900"
                            android:layout_marginRight="60dp"
                            android:layout_marginEnd="60dp"
                            android:focusable="false"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-50dp"
                            android:text=""
                            android:textColor="@color/colorText"
                            android:id="@+id/seekbar_value"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/radius_layout"
                        android:orientation="vertical">
                    <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/edit_profile_button"
                            android:text="@string/user_info_edit_account"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:fontFamily="@font/rubik"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginTop="30dp"
                            />
                    <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_delete_account"
                            android:fontFamily="@font/rubik"
                            android:layout_marginTop="20dp"
                            android:text="@string/user_info_delete"
                            android:textColor="@color/colorText"
                            android:background="@color/backgroundColor"
                            />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                >
            <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar"
                    android:background="@drawable/item_list_event"
                    android:padding="50dp"
                    android:indeterminateDrawable="@drawable/progress"
                    />


        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>