<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FriendsActivity"
        android:background="#fff"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                android:id="@+id/toolbar"
                app:navigationIcon="?attr/homeAsUpIndicator"
                android:theme="@style/Toolbar"
                app:titleTextColor="#fff"
                tools:ignore="MissingConstraints"
                >
        </androidx.appcompat.widget.Toolbar>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar"
                >
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textSocials"
                        >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Socials notifications"
                            android:fontFamily="@font/rubik"
                            android:textSize="22sp"
                            android:padding="5dp"
                            android:background="@drawable/border_bottom"
                            />

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/textSocials"
                        android:layout_marginTop="10dp"
                        android:id="@+id/invitation"
                        >
                    <TextView
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:text="Receive notification if someone invite me"
                            android:fontFamily="@font/rubik"
                            android:paddingBottom="10dp"
                            android:textSize="18sp"
                            android:paddingTop="10dp"
                            />
                    <Switch
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:layout_gravity="left"
                            android:padding="10dp"
                            android:id="@+id/user_invitation_switch"
                            />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/invitation"
                        android:layout_marginTop="10dp"
                        android:id="@+id/accepted"
                        >
                    <TextView
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:text="Receive notification if someone accept my invitation"
                            android:fontFamily="@font/rubik"
                            android:paddingBottom="10dp"
                            android:textSize="18sp"
                            android:paddingTop="10dp"
                            />
                    <Switch
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_gravity="left"
                            android:padding="10dp"
                            android:id="@+id/user_accept_switch"
                            />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textEvents"
                        android:layout_below="@+id/accepted"
                        android:layout_marginTop="30dp"
                        >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Events notifications"
                            android:fontFamily="@font/rubik"
                            android:textSize="22sp"
                            android:padding="5dp"
                            android:background="@drawable/border_bottom"
                            />

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/textEvents"
                        android:layout_marginTop="10dp"
                        android:id="@+id/invitation_event"
                        >
                    <TextView
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:text="Receive notification if someone invite me"
                            android:fontFamily="@font/rubik"
                            android:paddingBottom="10dp"
                            android:textSize="18sp"
                            android:paddingTop="10dp"
                            />
                    <Switch
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_gravity="left"
                            android:padding="10dp"
                            android:id="@+id/event_invitation_switch"
                            />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/invitation_event"
                        android:layout_marginTop="10dp"
                        android:id="@+id/accepted_event"
                        >
                    <TextView
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:text="Receive notification if someone accept my invitation"
                            android:fontFamily="@font/rubik"
                            android:paddingBottom="10dp"
                            android:textSize="18sp"
                            android:paddingTop="10dp"
                            />
                    <Switch
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:padding="10dp"
                            android:id="@+id/event_accept_switch"
                            />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/joinEvent"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/accepted_event"
                        >
                    <TextView
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:text="Receive notification if someone join my event"
                            android:fontFamily="@font/rubik"
                            android:paddingBottom="10dp"
                            android:textSize="18sp"
                            android:paddingTop="10dp"
                            />
                    <Switch
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_gravity="left"
                            android:padding="10dp"
                            android:id="@+id/event_join_switch"
                            />
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>