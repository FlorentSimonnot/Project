<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:id="@+id/layout_header"
        android:layout_marginBottom="60dp"
            >
        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                tools:ignore="MissingConstraints"
                android:id="@+id/toolbar"
                app:titleTextColor="#fff"
                >
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:id="@+id/test"
                        android:text="My Account"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:fontFamily="@font/rubik"
                        android:paddingTop="10dp"
                        android:gravity="center"
                        />

                <!--<ImageButton
                        android:id="@+id/btn_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Logout"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:background="@color/colorPrimary"
                        android:fontFamily="@font/rubik"
                        app:srcCompat="@drawable/ic_logout_white"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        />-->

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
                android:id="@+id/header"
                android:layout_below="@id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                >

            <RelativeLayout
                    android:id="@+id/header_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
            >
                <!--PROFILE PHOTO-->
                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_photo"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/com_facebook_profile_picture_blank_portrait"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FFFFFF"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/header_name"
                    android:layout_below="@id/header_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
            >
                <!--NAME + FIRSTNAME-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/name_and_firstName_layout"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_and_firstName_account"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:fontFamily="@font/rubik"
                            android:textSize="20sp"
                            />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/header_stats"
                android:layout_below="@id/header_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="0dp"
                android:orientation="horizontal"
            >

                <!--PARTICIPANTS-->
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/participants"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@drawable/border_right_background_primary"
                        >
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:fontFamily="@font/rubik"
                            android:textSize="30sp"
                            android:textColor="#fff"
                            android:id="@+id/friends_number"
                            />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Friends"
                            android:gravity="center"
                            android:fontFamily="@font/rubik"
                            android:textColor="#fff"
                            />

                </LinearLayout>

                <!--CREATED-->
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/waiting"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@drawable/border_right_background_primary"
                        >
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:fontFamily="@font/rubik"
                            android:textSize="30sp"
                            android:textColor="#fff"
                            android:id="@+id/created_number"
                            />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Events created"
                            android:gravity="center"
                            android:fontFamily="@font/rubik"
                            android:textColor="#fff"
                            />

                </LinearLayout>

                <!--JOINED-->
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/refuse"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center"
                        >
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:fontFamily="@font/rubik"
                            android:textSize="30sp"
                            android:textColor="#fff"
                            android:id="@+id/joined_number"
                            />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Events joined"
                            android:gravity="center"
                            android:fontFamily="@font/rubik"
                            android:textColor="#fff"
                            />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/header"
                >

            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="NotSibling"
                    >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="20dp"
                        >
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:padding="15dp"
                            android:orientation="horizontal"
                            android:id="@+id/infos"
                            android:clickable="true"
                            android:focusable="true"
                            >
                        <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                app:srcCompat="@drawable/ic_user"
                                />
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Your personal information"
                                android:fontFamily="@font/rubik"
                                android:paddingBottom="10dp"
                                android:textSize="20sp"
                                android:layout_marginLeft="10dp"
                                />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_top_bottom"
                            android:orientation="vertical"
                            android:layout_below="@id/infos"
                            android:id="@+id/events_and_friends"
                            android:layout_marginTop="20dp"
                            >

                        <LinearLayout
                                android:id="@+id/events_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="15dp"
                                >
                            <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    app:srcCompat="@drawable/ic_events"
                                    />
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Your events"
                                    android:fontFamily="@font/rubik"
                                    android:paddingBottom="10dp"
                                    android:textSize="20sp"
                                    android:layout_marginLeft="10dp"
                                    />
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:orientation="horizontal"
                                android:background="@color/colorPrimary"
                                android:layout_marginLeft="54dp"
                                android:layout_marginStart="54dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginEnd="20dp"
                                >
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="15dp"
                                android:id="@+id/friends_layout"
                                >
                            <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    app:srcCompat="@drawable/ic_friends"
                                    />
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="See your friends"
                                    android:fontFamily="@font/rubik"
                                    android:paddingBottom="10dp"
                                    android:textSize="20sp"
                                    android:layout_marginLeft="10dp"
                                    />
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:orientation="horizontal"
                                android:background="@color/colorPrimary"
                                android:layout_marginLeft="54dp"
                                android:layout_marginStart="54dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginEnd="20dp"
                                >
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="15dp"
                                android:id="@+id/badges_layout"
                                >
                            <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    app:srcCompat="@drawable/ic_badge"
                                    />
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="See your badges"
                                    android:fontFamily="@font/rubik"
                                    android:paddingBottom="10dp"
                                    android:textSize="20sp"
                                    android:layout_marginLeft="10dp"
                                    />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_top_bottom"
                            android:orientation="vertical"
                            android:layout_below="@id/events_and_friends"
                            android:id="@+id/more"
                            android:layout_marginTop="20dp"
                            >

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="15dp"
                                android:id="@+id/notificationPush"
                                >
                            <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    app:srcCompat="@drawable/ic_notification"
                                    />
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Notification push"
                                    android:fontFamily="@font/rubik"
                                    android:paddingBottom="10dp"
                                    android:textSize="20sp"
                                    android:layout_marginLeft="10dp"
                                    />
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:orientation="horizontal"
                                android:background="@color/colorPrimary"
                                android:layout_marginLeft="54dp"
                                android:layout_marginStart="54dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginEnd="20dp"
                                >
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="15dp"
                                android:id="@+id/share_application"
                                >
                            <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    app:srcCompat="@drawable/ic_like"
                                    />
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Advise this application"
                                    android:fontFamily="@font/rubik"
                                    android:paddingBottom="10dp"
                                    android:textSize="20sp"
                                    android:layout_marginLeft="10dp"
                                    />
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:orientation="horizontal"
                                android:background="@color/colorPrimary"
                                android:layout_marginLeft="54dp"
                                android:layout_marginStart="54dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginEnd="20dp"
                                >
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="15dp"
                                >
                            <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    app:srcCompat="@drawable/ic_more"
                                    />
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Terms of use"
                                    android:fontFamily="@font/rubik"
                                    android:paddingBottom="10dp"
                                    android:textSize="20sp"
                                    android:layout_marginLeft="10dp"
                                    />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:padding="10dp"
                            android:orientation="horizontal"
                            android:id="@+id/deconnexion"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:clickable="true"
                            android:focusable="true"
                            >
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Log out"
                                android:fontFamily="@font/rubik"
                                android:textSize="20sp"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                />
                    </LinearLayout>
                </LinearLayout>


            </ScrollView>

        </RelativeLayout>
    </RelativeLayout>




    <!-- ***********BOTTOM MENU************* -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="@color/colorPrimary"
            app:itemTextColor="#fff"
            app:itemIconTint="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu"
            app:labelVisibilityMode="labeled"
            />

</androidx.constraintlayout.widget.ConstraintLayout>