<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ededed"
        tools:context=".EventInfoJojoActivity"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/event_info_layout"
            tools:ignore="MissingConstraints"
            >

        <!--TOOLBAR-->

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                tools:ignore="MissingConstraints"
                android:id="@+id/toolbar"
                app:navigationIcon="?attr/homeAsUpIndicator"
                android:theme="@style/Toolbar"
                android:textColor="#fff"
                android:fontFamily="@font/rubik"
                >
            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"
                    >
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_checked"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:id="@+id/confirm_edit"
                        android:background="@color/colorPrimary"
                        />
            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/title_sport"
            android:layout_below="@id/toolbar"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
                >

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
            >
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/invitations"
                    android:orientation="vertical"
                    android:padding="10dp"

                >
                    <TextView
                        android:text="Name"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/rubik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                    />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:gravity="right"
                >
                    <TextView
                            android:id="@+id/modify_title"
                            android:text="Name"
                            android:textColor="@color/colorBlueGrey900"
                            android:fontFamily="@font/rubik"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textAlignment="textEnd"
                            android:gravity="end"
                            />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <LinearLayout
                        android:layout_width="100dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/sport"
                        android:orientation="vertical"
                        android:padding="10dp"

                        >
                    <TextView
                            android:text="Sport"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/rubik"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            />

                </LinearLayout>
                <LinearLayout
                        android:layout_width="300dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="right"
                        >
                    <TextView
                            android:id="@+id/modify_sport"
                            android:text="Name"
                            android:textColor="@color/colorBlueGrey900"
                            android:fontFamily="@font/rubik"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:id="@+id/date_hour_place"
                android:layout_below="@id/title_sport"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:background="#fff"
                >

            <TextView
                    android:id="@+id/modify_date"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="date"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlueGrey900"
                    android:fontFamily="@font/rubik"
                    android:padding="5dp"
                    android:background="@drawable/border_bottom"
                    android:drawableLeft="@drawable/ic_calendar"
                    android:drawablePadding="20dp"
                    android:drawableStart="@drawable/ic_calendar"
                    />

            <TextView
                    android:id="@+id/modify_hour"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/modify_title"
                    android:layout_marginTop="15dp"
                    android:text="hour"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlueGrey900"
                    android:fontFamily="@font/rubik"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/ic_clock"
                    android:drawablePadding="20dp"
                    android:drawableStart="@drawable/ic_clock"
                    android:background="@drawable/border_bottom"
                    />

            <TextView
                    android:id="@+id/modify_place"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/modify_title"
                    android:layout_marginTop="15dp"
                    android:text="place"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlueGrey900"
                    android:fontFamily="@font/rubik"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/ic_pin"
                    android:drawablePadding="20dp"
                    android:drawableStart="@drawable/ic_pin"
                    />


        </LinearLayout>

        <LinearLayout
                android:id="@+id/description"
                android:layout_below="@id/date_hour_place"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:padding="10dp"
                >

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="@drawable/border_bottom"
                    >
                <TextView
                        android:text="Description"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/rubik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        />

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    >
                <TextView
                        android:id="@+id/modify_description"
                        android:text="Name"
                        android:textColor="@color/colorBlueGrey900"
                        android:fontFamily="@font/rubik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:id="@+id/more"
                android:layout_below="@id/description"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:background="#fff"
                >

            <LinearLayout
                    android:id="@+id/button_number_of_participant"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    >
                <LinearLayout
                        android:layout_width="400dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/numberPeople"
                        android:padding="10dp"

                        >
                    <TextView
                            android:text="Number of participant"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/rubik"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            />

                </LinearLayout>
                <LinearLayout
                        android:layout_width="200dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/participant_number"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="end"
                        >
                    <TextView
                            android:id="@+id/modify_nb_people"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="@color/colorBlueGrey900"
                            android:fontFamily="@font/rubik"
                            android:gravity="end"
                            />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/button_privacy"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <LinearLayout
                        android:layout_width="100dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/privacy"
                        android:orientation="vertical"
                        android:padding="10dp"

                        >
                    <TextView
                            android:text="Privacy"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/rubik"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            />

                </LinearLayout>
                <LinearLayout
                        android:layout_width="300dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="end"
                        >
                    <TextView
                            android:id="@+id/modify_privacy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="privacy"
                            android:textSize="20sp"
                            android:textColor="@color/colorBlueGrey900"
                            android:fontFamily="@font/rubik"
                            android:gravity="end"
                            />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <!--<Button
                android:id="@+id/confirm_edit"
                android:layout_below="@id/more"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm changes"
                android:layout_centerHorizontal="true"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:fontFamily="@font/rubik"
                android:textSize="22sp"
                />-->



    </RelativeLayout>

</ScrollView>