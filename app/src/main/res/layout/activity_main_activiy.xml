<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"

            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            tools:ignore="MissingConstraints"
            android:padding="12dp"
            android:id="@+id/toolbar">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Home"
                android:textColor="#fff"
                android:textSize="24dp"
                android:fontFamily="@font/rubik"
        />
        <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_search_white_24dp"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="200dp"
        />
        <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_settings_white_24dp"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="25dp"

        />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
            android:id="@+id/search_layout"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:alpha="0"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" android:orientation="vertical">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="Que voulez vous recherchez ?"
                android:textColorHint="@color/colorPrimary"
        />
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="@color/colorPrimary"
            app:itemTextColor="#fff"
            app:itemIconTint="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout"
            tools:layout_editor_absoluteY="60dp"
            android:layout_marginTop="60dp"
    >

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/message"/>
        <TextView
                android:id="@+id/res"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
        />


        <!--pour tester mes layout-->
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sign_in_jojo"
                android:text="sign in"
        />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>