<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateEventActivityStep2"
        android:background="@color/colorGrey100"
        >

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            tools:ignore="MissingConstraints"
            android:padding="12dp"
            android:id="@+id/toolbar">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="New event"
                android:textColor="#fff"
                android:textSize="24dp"
                android:fontFamily="@font/rubik"
        />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:padding="10dp"
            tools:ignore="MissingConstraints"
            android:gravity="center"
        >

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                >
            <ImageView
                    android:layout_width="300dp"
                    android:layout_height="5dp"
                    android:src="@drawable/dotted"
                    android:layerType="software"
                    android:layout_marginTop="30dp"
                    />
            <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        tools:ignore="UselessParent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:layout_marginRight="80dp"

                        >
                    <ImageView
                            android:id="@+id/step1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/ic_one"
                            android:background="@drawable/border_image"
                            android:layout_gravity="center"
                            android:layout_centerHorizontal="true"
                            android:contentDescription="step1"/>
                    <TextView
                            android:layout_below="@id/step1"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:text="Create your event"
                            android:gravity="center"
                            android:fontFamily="@font/rubik"
                            />
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        tools:ignore="UselessParent"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >
                    <ImageView
                            android:id="@+id/step2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/ic_two"
                            android:layout_gravity="center_horizontal"
                            android:layout_centerHorizontal="true"
                            android:contentDescription="step2"/>
                    <TextView
                            android:layout_below="@id/step2"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:text="Set options"
                            android:gravity="center"
                            android:fontFamily="@font/rubik"
                            />
                </RelativeLayout>
            </LinearLayout>

        </FrameLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/numberPeople"
                android:text="Choose number of people"
                android:padding="10dp"
                android:background="@drawable/basic_input_rectangle"
                android:drawableLeft="@drawable/ic_people"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/ic_people"
                />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/description"
                android:hint="description"
                android:gravity="start"
                android:textAlignment="textStart"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:background="@drawable/basic_input_rectangle"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/privacy"
                android:text="Which privacy"
                android:layout_below="@id/description"
                android:padding="10dp"
                android:background="@drawable/basic_input_rectangle"
                android:drawableLeft="@drawable/ic_people"
                android:drawablePadding="20dp"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_people"
                />

        <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:id="@+id/linear_privacy"
        >

            <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/privacyText"
                    android:text="privacy"
                    android:layout_below="@id/description"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="5dp"
            />
            <Spinner
                    android:id="@+id/privacy"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/description"
                    android:layout_toRightOf="@id/privacy"
                    android:layout_weight="0.5"
                    android:entries="@array/privacy"
            >
            </Spinner>

        </LinearLayout>-->
    </LinearLayout>



    <!--<EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nb_people"
            android:layout_below="@id/place"
            android:hint="number of people"
            android:inputType="number"
    />-->


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="NotSibling">
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/create_event"
                android:text="create event"
                android:layout_gravity="bottom"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:fontFamily="@font/rubik"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
        />
    </LinearLayout>

</RelativeLayout>