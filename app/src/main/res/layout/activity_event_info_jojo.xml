<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EventInfoJojoActivity"
        >

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/event_info_layout"
            tools:ignore="MissingConstraints"
            >

        <!--TOOLBAR-->
        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                tools:ignore="MissingConstraints"
                android:id="@+id/toolbar"
                app:navigationIcon="?attr/homeAsUpIndicator"
                android:theme="@style/Toolbar"
                app:titleTextColor="#fff"
                >

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/event_name"
                    android:text="Title"
                    android:textColor="#fff"
                    android:textSize="24dp"
                    android:fontFamily="@font/rubik"
                    android:gravity="end|center_vertical"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="10dp"
                    />
        </androidx.appcompat.widget.Toolbar>

        <!--SPORT LOGO-->
        <ImageView
                android:id="@+id/sport_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@id/toolbar"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="5dp"
                />

        <!--EVENT NAME-->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sport"
                android:layout_below="@id/sport_logo"
                android:textAlignment="center"
                />

        <!--CREATOR NAME-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/creator_layout"
                android:orientation="vertical"
                android:layout_below="@id/sport"
                >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="creator"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    style="?android:attr/listSeparatorTextViewStyle"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/creator"
                    android:textSize="15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="20dp"
                    />
        </LinearLayout>


        <!--PLACE-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/place_layout"
                android:orientation="vertical"
                android:layout_below="@id/creator_layout"
                >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="place"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    style="?android:attr/listSeparatorTextViewStyle"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/place"
                    android:textSize="15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="20dp"
                    />
        </LinearLayout>

        <!--DATE + TIME-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/date_time_layout"
                android:layout_below="@id/place_layout"
                android:orientation="horizontal"
                >

            <!--DATE-->
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="date"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        style="?android:attr/listSeparatorTextViewStyle"
                        />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/date"
                        android:textSize="15dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginBottom="20dp"
                        />
            </LinearLayout>

            <!--TIME-->
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="time"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        style="?android:attr/listSeparatorTextViewStyle"
                        />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/time"
                        android:textSize="15dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginBottom="20dp"
                        />
            </LinearLayout>

        </LinearLayout>

        <!--NB PEOPLE-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nb_people_layout"
                android:orientation="vertical"
                android:layout_below="@id/date_time_layout"
                >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="number of people"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    style="?android:attr/listSeparatorTextViewStyle"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nb_people"
                    android:textSize="15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="20dp"
                    />
        </LinearLayout>

        <!--DESCRIPTION-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description_layout"
                android:orientation="vertical"
                android:layout_below="@id/nb_people_layout"
                >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="description"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    style="?android:attr/listSeparatorTextViewStyle"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/description"
                    android:textSize="15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="20dp"
                    />
        </LinearLayout>

        <TextView
                android:id="@+id/participants_waiting"
                android:layout_below="@id/description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="See participants waiting"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimary"
                />
        <TextView
                android:id="@+id/participants"
                android:layout_below="@id/participants_waiting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="See participants"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimary"
                />
        <!--PARTICIPATE BUTTON-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/description_layout"
                android:orientation="horizontal"
                android:padding="10dp"
                >
            <!--<Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    android:text="participate"
                    />-->


        </LinearLayout>
        <ImageButton
                android:id="@+id/button_edit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_button_edit"
                app:srcCompat="@drawable/ic_edit"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:visibility="gone"
                />
        <ImageButton
                android:id="@+id/button_delete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_button_delete"
                app:srcCompat="@drawable/ic_trash"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                />

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_participate"
                android:text="participate"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_cancel"
                android:text="Cancel my participation"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:background="@color/colorAccent"
                android:textColor="#fff"
                />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>