<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateEventActivity"
        android:background="@color/colorDarkMode"
>

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            tools:ignore="MissingConstraints"
            android:padding="12dp"
            android:id="@+id/toolbar">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="New event"
                android:textColor="#fff"
                android:textSize="24dp"
                android:fontFamily="@font/rubik"
        />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
    >

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
        >
            <ImageView
                    android:layout_width="300dp"
                    android:layout_height="5dp"
                    android:src="@drawable/dotted"
                    android:layerType="software"
                    android:layout_marginTop="30dp"
            />
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:gravity="center"
            >
                <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        tools:ignore="UselessParent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:layout_marginRight="80dp"

                >
                    <ImageView
                            android:id="@+id/step1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/ic_one"
                            android:background="@drawable/border_image"
                            android:layout_gravity="center"
                            android:layout_centerHorizontal="true"
                            android:contentDescription="step1"/>
                    <TextView
                            android:layout_below="@id/step1"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:text="Create your event"
                            android:gravity="center"
                            android:fontFamily="@font/rubik"
                    />
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        tools:ignore="UselessParent"
                        android:orientation="vertical"
                        android:padding="5dp"
                >
                    <ImageView
                            android:id="@+id/step2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/ic_two"
                            android:layout_gravity="center_horizontal"
                            android:layout_centerHorizontal="true"
                            android:contentDescription="step2"/>
                    <TextView
                            android:layout_below="@id/step2"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:text="Set options"
                            android:gravity="center"
                            android:fontFamily="@font/rubik"
                    />
                </RelativeLayout>
            </LinearLayout>

        </FrameLayout>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_event"
                android:hint="Name"
                android:background="@drawable/basic_input_rectangle"
                android:padding="10dp"/>

        <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sport"
                android:layout_below="@id/name_event"
                android:hint="Select a sport"
                android:completionThreshold="1"
                android:background="@drawable/basic_input_rectangle"
                android:padding="10dp"
                android:layout_marginTop="30dp"
                android:drawablePadding="15dp"
        />

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
        >

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/date"
                    android:layout_below="@id/sport"
                    android:text="Date"
                    android:background="@drawable/basic_input_rectangle"
                    android:padding="10dp"
                    android:layout_marginTop="30dp"
                    android:drawableLeft="@drawable/ic_calendar"
                    android:drawablePadding="20dp"
                    android:drawableStart="@drawable/ic_calendar"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:textSize="18sp"
            />

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/time"
                    android:layout_below="@id/sport"
                    android:text="Time"
                    android:background="@drawable/basic_input_rectangle"
                    android:padding="10dp"
                    android:layout_marginTop="30dp"
                    android:drawableLeft="@drawable/ic_clock"
                    android:drawablePadding="20dp"
                    android:drawableStart="@drawable/ic_clock"
                    android:layout_weight="1"
                    android:textSize="18sp"
            />


        </LinearLayout>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/place"
                android:layout_below="@id/date"
                android:hint="place"
                android:background="@drawable/basic_input_rectangle"
                android:padding="10dp"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/ic_placeholder"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/ic_placeholder"
        />

        <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_number"
        >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/numberText"
                    android:text="number of people"
                    android:layout_below="@id/description"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="5dp"
            />

        </LinearLayout>-->


    </LinearLayout>



    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linear_privacy"
            tools:ignore="NotSibling">
        <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/create_event"
                android:drawableStart="@drawable/ic_arrow_next"
                android:paddingLeft="25dp"
                android:background="@drawable/rounded_button_next"
                android:layout_gravity="bottom|end"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/ic_arrow_next" android:paddingStart="25dp"/>
    </RelativeLayout>



</RelativeLayout>
