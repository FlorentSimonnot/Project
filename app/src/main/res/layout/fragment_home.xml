<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".HomeFragment"
>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundCalendar"
            android:id="@+id/barMonth"
            android:visibility="gone"
            android:layout_below="@id/toolbar"
    >

            <CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:weekSeparatorLineColor="#fff"
                    android:layout_height="wrap_content"
                    android:dateTextAppearance="@style/CalenderViewDateCustomText"
                    android:theme="@style/CalenderViewCustom"
                    android:weekDayTextAppearance="@style/CalenderViewWeekCustomText"
            >

            </CalendarView>
    </RelativeLayout>
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/barMonth"
            android:id="@+id/layoutEventsView"
            android:layout_marginTop="130dp"
            tools:ignore="MissingConstraints">
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/events_listview"
                android:dividerHeight="10.0sp"
                android:divider="@android:color/transparent"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                >

        </ListView>

        <LinearLayout
                android:elevation="5dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/events_listview"
                android:layout_marginTop="-90dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_button_accent_color"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/buttonCalendar"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="27"
                    android:id="@+id/textDay"
                    android:textSize="24sp"
                    android:gravity="center_horizontal"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:id="@+id/textMonth"
                    android:text="Oct"
                    android:gravity="center_horizontal"
            />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            >
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:background="@drawable/item_list_event"
                android:padding="50dp"
                android:indeterminateDrawable="@drawable/progress"
                />


    </RelativeLayout>


</FrameLayout>