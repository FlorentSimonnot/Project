<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ModifyPasswordActivity"
        >

    <!--TOOLBAR-->
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            tools:ignore="MissingConstraints"
            android:id="@+id/toolbar"
            app:navigationIcon="?attr/homeAsUpIndicator"
            android:theme="@style/Toolbar"
            app:titleTextColor="#fff"
            >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/toolbar_textview"
                android:text="Modify Password"
                android:textColor="#fff"
                android:textSize="24dp"
                android:fontFamily="@font/rubik"
                android:gravity="end|center_vertical"
                android:textAlignment="textEnd"
                android:layout_marginRight="10dp"
                />
    </androidx.appcompat.widget.Toolbar>
    <!--============================================================-->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/current_password_layout"
            android:orientation="vertical"
            android:layout_below="@id/toolbar"
            >
        <!--CURRENT PASSWORD-->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="current password"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                style="?android:attr/listSeparatorTextViewStyle"
                />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/current_password_editText"
                android:textSize="15dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="20dp"
                android:inputType="textPassword"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_password_layout"
            android:orientation="vertical"
            android:layout_below="@id/current_password_layout"
            >
        <!--NEW PASSWORD-->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="new password"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                style="?android:attr/listSeparatorTextViewStyle"
                />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new_password_editText"
                android:textSize="15dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="20dp"
                android:inputType="textPassword"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_new_password_layout"
            android:orientation="vertical"
            android:layout_below="@id/new_password_layout"
            >
        <!--NEW PASSWORD-->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="confirm new password"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                style="?android:attr/listSeparatorTextViewStyle"
                />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/confirm_new_password_editText"
                android:textSize="15dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="20dp"
                android:inputType="textPassword"
                />
    </LinearLayout>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_password_changes_button"
            android:text="confirm"
            android:layout_below="@id/confirm_new_password_layout"
            />

</RelativeLayout>