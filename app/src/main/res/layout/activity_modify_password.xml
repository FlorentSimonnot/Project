<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ModifyPasswordActivity"
        android:background="@color/backgroundColor"

        >

    <!--TOOLBAR-->
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            tools:ignore="MissingConstraints"
            android:id="@+id/toolbar"
            app:navigationIcon="?attr/homeAsUpIndicator"
            android:theme="@style/Toolbar"
            app:titleTextColor="#fff"
            >

    </androidx.appcompat.widget.Toolbar>
    <!--============================================================-->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/current_password_layout"
            android:orientation="vertical"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            >
        <!--CURRENT PASSWORD-->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/modify_password_current"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textColor="@color/colorText"
                />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/current_password_editText"
                android:textSize="15dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="20dp"
                android:inputType="textPassword"
                android:textColor="@color/colorText"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="2dp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_password_layout"
            android:orientation="vertical"
            android:layout_below="@id/current_password_layout"
            android:padding="10dp"
            >
        <!--NEW PASSWORD-->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/modify_password_new"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textColor="@color/colorText"
                />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new_password_editText"
                android:textSize="15dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="20dp"
                android:inputType="textPassword"
                android:textColor="@color/colorText"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_new_password_layout"
            android:orientation="vertical"
            android:layout_below="@id/new_password_layout"
            android:padding="10dp"
            >
        <!--NEW PASSWORD-->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/modify_password_confirm_new"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textColor="@color/colorText"
                />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/confirm_new_password_editText"
                android:textSize="15dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="20dp"
                android:inputType="textPassword"
                android:textColor="@color/colorText"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                />
    </LinearLayout>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_password_changes_button"
            android:text="@string/modify_password_confirm"
            android:layout_below="@id/confirm_new_password_layout"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            />

</RelativeLayout>