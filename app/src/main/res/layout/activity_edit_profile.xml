<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditProfileActivity">

    <!--TOOLBAR-->
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            tools:ignore="MissingConstraints"
            android:id="@+id/toolbar"
            app:navigationIcon="?attr/homeAsUpIndicator"
            android:theme="@style/Toolbar"
            app:titleTextColor="#fff"
            >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/toolbar_textview"
                android:text="Edit Profile"
                android:textColor="#fff"
                android:textSize="24dp"
                android:fontFamily="@font/rubik"
                android:gravity="end|center_vertical"
                android:textAlignment="textEnd"
                android:layout_marginRight="10dp"
                />
    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            >

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints"
                >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                <!--PROFILE PHOTO-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="20dp"
                        >
                    <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_photo"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/com_facebook_profile_picture_blank_portrait"
                            app:civ_border_width="2dp"
                            app:civ_border_color="#FF000000"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:id="@+id/name_and_firstName_layout"
                >

                </LinearLayout>

                <!--=============================================================-->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:id="@+id/email_layout"
                        android:layout_below="@id/name_and_firstName_layout"
                        android:background="#fff"
                        android:layout_marginTop="10dp"
                        >
                    <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:srcCompat="@drawable/ic_email"
                            />
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/email_account"
                            android:text=""
                            android:fontFamily="@font/rubik"
                            android:paddingBottom="10dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/border_bottom_primary"
                            />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:id="@+id/sex_layout"
                        android:layout_below="@id/name_and_firstName_layout"
                        android:background="#fff"
                        >
                    <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:srcCompat="@drawable/ic_gender"
                            />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/edit_sexe"
                            android:text=""
                            android:fontFamily="@font/rubik"
                            android:paddingBottom="10dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/border_bottom_primary"
                            />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:id="@+id/birthday_layout"
                        android:layout_below="@id/name_and_firstName_layout"
                        android:background="#fff"
                        >
                    <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:srcCompat="@drawable/ic_birthday_primary"
                            />
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/birthday_account"
                            android:text=""
                            android:fontFamily="@font/rubik"
                            android:paddingBottom="10dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/border_bottom_primary"
                            />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:id="@+id/city_layout"
                        android:layout_below="@id/name_and_firstName_layout"
                        android:background="#fff"
                        >
                    <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:srcCompat="@drawable/ic_city"
                            />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/city_account"
                            android:text=""
                            android:fontFamily="@font/rubik"
                            android:paddingBottom="10dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/border_bottom_primary"
                            />
                </LinearLayout>

                <!--=========================================================-->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/describe_layout"
                        android:layout_below="@id/sex_and_birthday_and_city_layout"
                        android:orientation="vertical"
                        android:background="#fff"
                        android:layout_marginTop="30dp"
                        android:padding="10dp"
                        >
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:fontFamily="@font/rubik"
                            />
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:id="@+id/describe_account"
                            android:textSize="15dp"
                            android:padding="10dp"
                            android:background="@drawable/border_bottom_primary"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/describe_layout"
                        android:orientation="vertical"
                        >

                    <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/confirm_changes"
                            android:text="confirm changes"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:fontFamily="@font/rubik"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginTop="30dp"
                            />

                    <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/modify_password_button"
                            android:fontFamily="@font/rubik"
                            android:layout_marginTop="20dp"
                            android:text="MODIFY MY PASSWORD"
                            android:textColor="#fff"
                            android:background="@color/colorPrimary"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginBottom="20dp"
                            />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>



</RelativeLayout>