<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f6fa"
        tools:context=".EditProfileActivity">

    <!--TOOLBAR-->
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            tools:ignore="MissingConstraints"
            android:id="@+id/toolbar"
            app:navigationIcon="?attr/homeAsUpIndicator"
            android:theme="@style/Toolbar"
            app:titleTextColor="#fff"
            >
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="end"
                android:layout_marginRight="20dp"
        >
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_checked"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:id="@+id/confirm_changes"
                    android:background="@color/colorPrimary"
            />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            >

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints"
                >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                <!--PROFILE PHOTO-->

                <!--=============================================================-->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp"
                        >

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_photo"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:src="@drawable/com_facebook_profile_picture_blank_portrait"
                            app:civ_border_color="#FF000000"
                            app:civ_border_width="2dp"
                            />

                    <Button
                            android:id="@+id/change_photo"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/profile_photo"
                            android:background="#f5f6fa"
                            android:drawableStart="@drawable/ic_camera"
                            android:drawableLeft="@drawable/ic_camera"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/rubik"
                            android:padding="5dp"
                            android:text="@string/edit_profile_change_photo"
                            android:textColor="@color/colorPrimary"
                            />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:id="@+id/email_layout"
                        android:layout_below="@id/name_and_firstName_layout"
                        android:background="#fff"
                        android:layout_marginTop="10dp"
                        >
                    <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:srcCompat="@drawable/ic_email"
                            />
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/email_account"
                            android:text=""
                            android:fontFamily="@font/rubik"
                            android:paddingBottom="10dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/border_bottom_primary"
                            />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:id="@+id/sex_layout"
                        android:layout_below="@id/name_and_firstName_layout"
                        android:background="#fff"
                        >
                    <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:srcCompat="@drawable/ic_gender"
                            />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/edit_sexe"
                            android:text=""
                            android:fontFamily="@font/rubik"
                            android:paddingBottom="10dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/border_bottom_primary"
                            />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:id="@+id/birthday_layout"
                        android:layout_below="@id/name_and_firstName_layout"
                        android:background="#fff"
                        >
                    <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:srcCompat="@drawable/ic_birthday_primary"
                            />
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/birthday_account"
                            android:text=""
                            android:fontFamily="@font/rubik"
                            android:paddingBottom="10dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/border_bottom_primary"
                            />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp"
                        android:id="@+id/city_layout"
                        android:layout_below="@id/name_and_firstName_layout"
                        android:background="#fff"
                        >
                    <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:srcCompat="@drawable/ic_city"
                            />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/city_account"
                            android:text=""
                            android:fontFamily="@font/rubik"
                            android:paddingBottom="10dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/border_bottom_primary"
                            />
                </LinearLayout>

                <!--=========================================================-->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/describe_layout"
                        android:orientation="vertical"
                        android:background="#fff"
                        android:layout_marginTop="30dp"
                        android:padding="10dp"
                        >
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/edit_profile_description"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:fontFamily="@font/rubik"
                            />
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:id="@+id/describe_account"
                            android:textSize="15dp"
                            android:padding="10dp"
                            android:background="@drawable/border_bottom_primary"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radius_layout"
                        android:orientation="horizontal"
                        android:background="#fff"
                        android:layout_marginTop="30dp"
                        android:padding="15dp"
                        >
                    <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            app:srcCompat="@drawable/ic_distance"
                            />
                    <SeekBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/radius"
                            android:text=""
                            android:fontFamily="@font/rubik"
                            android:paddingBottom="10dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:thumbTint="@color/colorPrimary"
                            android:progressTint="@color/colorPrimary"
                            android:max="25"
                            android:backgroundTint="@color/colorBlueGrey900"
                            android:layout_marginRight="60dp"
                            android:layout_marginEnd="60dp"
                            android:focusable="false"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-50dp"
                            android:text=""
                            android:textColor="@color/colorPrimary"
                            android:id="@+id/seekbar_value"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/describe_layout"
                        android:orientation="vertical"
                        >

                    <!--<Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/confirm_changes"
                            android:text="confirm changes"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:fontFamily="@font/rubik"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginTop="30dp"
                            />-->

                    <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/modify_password_button"
                            android:fontFamily="@font/rubik"
                            android:layout_marginTop="20dp"
                            android:text="@string/edit_profile_modify_password"
                            android:textColor="#fff"
                            android:background="@color/colorPrimary"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginBottom="20dp"
                            />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>



</RelativeLayout>