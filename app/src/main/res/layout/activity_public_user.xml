<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PublicUserActivity"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <!--TOOLBAR-->
        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                tools:ignore="MissingConstraints"
                android:id="@+id/toolbar"
                app:navigationIcon="?attr/homeAsUpIndicator"
                android:theme="@style/Toolbar"
                app:titleTextColor="#fff"
                >

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/event_name"
                    android:textColor="#fff"
                    android:textSize="24dp"
                    android:fontFamily="@font/rubik"
                    android:gravity="end|center_vertical"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="10dp"
                    />
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                <!--PROFILE PHOTO-->
                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_photo"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/com_facebook_profile_picture_blank_portrait"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="5dp"
                        />


                <!--NAME + FIRSTNAME-->
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/identity_public_user"
                        android:textAlignment="center"
                        />


                <!--EVENTS USER INFO-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/event_user_info_layout"
                        android:orientation="horizontal"
                        android:baselineAligned="false"
                        >
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.5"
                            >
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="events created"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                style="?android:attr/listSeparatorTextViewStyle"
                                />
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/events_created_textview"
                                android:textSize="15dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginBottom="20dp"
                                />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.5"
                            >
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="events joined"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                style="?android:attr/listSeparatorTextViewStyle"
                                />
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/events_joined_textview"
                                android:textSize="15dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginBottom="20dp"
                                />
                    </LinearLayout>

                </LinearLayout>



                <!--SEX + BIRTHDAY + CITY-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sex_and_birthday_and_city_layout"
                        android:orientation="horizontal"
                        >
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.3"
                            >
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="sex"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                style="?android:attr/listSeparatorTextViewStyle"
                                />
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/user_sex_textview"
                                android:textSize="15dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginBottom="20dp"
                                />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.3"
                            >
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="birthday"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                style="?android:attr/listSeparatorTextViewStyle"
                                />
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/user_birthday_textview"
                                android:textSize="15dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginBottom="20dp"
                                />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.3"
                            >
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="city"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                style="?android:attr/listSeparatorTextViewStyle"
                                />
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/city_textview"
                                android:textSize="15dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginBottom="20dp"
                                />
                    </LinearLayout>

                </LinearLayout>

                <!--DESCRIPTION-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/describe_layout"
                        android:orientation="vertical"
                        >
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="description"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            style="?android:attr/listSeparatorTextViewStyle"
                            />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:id="@+id/description_textview"
                            android:textSize="15dp"
                            android:layout_marginLeft="7dp"
                            />
                </LinearLayout>

                <!--ADD-->
                <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:id="@+id/add_button"
                        android:text="add"
                        />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>