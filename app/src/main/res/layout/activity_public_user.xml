<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PublicUserActivity"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:id="@+id/layout_header"
            >

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                tools:ignore="MissingConstraints"
                android:id="@+id/toolbar"
                android:theme="@style/Toolbar"
                app:titleTextColor="#fff"
                >

            <!---<RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    >

                <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_speech_bubble"
                        android:background="@color/colorPrimary"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        />
            </RelativeLayout>-->
        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
                android:id="@+id/header"
                android:layout_below="@id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                >

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_photo"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/com_facebook_profile_picture_blank_portrait"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorPrimary"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_above="@+id/description_layout"
                android:layout_marginBottom="-50dp"
                android:layout_marginLeft="157dp"
                android:layout_marginStart="157dp"
                android:layout_alignLeft="@+id/header"
                android:layout_alignStart="@+id/header"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="158dp"
                android:layout_marginEnd="158dp"
                />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:layout_below="@id/header"
                android:id="@+id/description_layout"
                android:paddingTop="60dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                >

            <TextView
                    android:text="Jonathan Chu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:fontFamily="@font/rubik"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:id="@+id/identity"
                    />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/identity"
                    android:id="@+id/place_layout"
                    android:gravity="center_horizontal"
                    >

                <TextView
                        android:text="Where"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:fontFamily="@font/rubik"
                        android:textColor="#778ca3"
                        android:gravity="center_horizontal"
                        android:id="@+id/place"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:drawableStart="@drawable/ic_pin"
                        android:drawableLeft="@drawable/ic_pin"
                        android:layout_gravity="center_horizontal"
                        android:drawablePadding="15dp"
                        android:padding="10dp"
                        />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttons_layout"
                    android:orientation="horizontal"
                    android:layout_below="@id/place_layout"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    >

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >
                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/layoutAddFriend"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            >
                        <ImageButton
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/rounded_button_grey50"
                                app:srcCompat="@drawable/ic_add_user"
                                android:id="@+id/addFriendButton"
                                android:gravity="center_horizontal"
                                android:layout_gravity="center_horizontal"
                                />

                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/layoutAddFriend"
                            >


                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add friend"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/rubik"
                                />


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        >

                    <ImageButton
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/rounded_button_grey50"
                            app:srcCompat="@drawable/ic_paper_plane_primary"
                            android:id="@+id/sendMessageButton"
                            android:layout_gravity="center"
                            android:gravity="center"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Send message"
                            android:layout_below="@id/sendMessageButton"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/rubik"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                    <ImageButton
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/rounded_button_grey50"
                            app:srcCompat="@drawable/ic_question"
                            android:id="@+id/learnMore"
                            android:layout_gravity="center"
                            android:gravity="center"
                            />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Learn more"
                            android:layout_below="@id/learnMore"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/rubik"
                            />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                android:layout_below="@id/description_layout"
                android:id="@+id/stats_layout"
                android:background="#dedede"
                >


            <com.google.android.material.tabs.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tab"
                    app:tabIndicatorColor="@color/colorPrimary"
                    app:tabIndicatorHeight="3dp"
                    android:background="@color/colorPrimary"
                    app:tabTextColor="#fff"
                    >

                <com.google.android.material.tabs.TabItem
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#fff"
                        android:id="@+id/events_tab"
                        android:text="Events Created"/>

                <com.google.android.material.tabs.TabItem
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#fff"
                        android:id="@+id/events_joined_tab"
                        android:text="Events Joined"/>

            </com.google.android.material.tabs.TabLayout>

            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tab"
                    android:id="@+id/listViewEvents"
                    android:padding="10dp"
                    android:divider="@null"
                    />
        </RelativeLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>